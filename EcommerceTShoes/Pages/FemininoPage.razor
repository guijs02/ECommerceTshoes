@page "/Feminino"
@using EcommerceAPI.Services.Interfaces;
@using EcommerceTShoes.Model;

@inject ITShoesService _service

@if (OnInitializeCompleted)
{
    <nav class="navbar navbar-expand-lg navbar-light bg-warning navbar-compact">
        <a class="navbar-brand" href="/">
            <img src="/assets/fotoLogo_preview_rev_1.png" height="70">
        </a>

        <button id="navbar-toggler" class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link text-white mr-3" href="/Masculino">Masculino</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white mr-3" href="/Feminino">Feminino</a>
                </li>
            </ul>
            <a class="nav-link" href="/Carrinho">
                <img src="/assets/shopping-cart.png" style="height:20px;" />
            </a>
        </div>
    </nav>
    <div class="d-flex justify-content-center align-content-center">

        <div class="container row align-content-center">
            @foreach (var item in Produtos)
            {
                <div class="col-3">
                    <div class="p-0 my-3 border">
                        <div class="card">
                            <img src="@item.ImagemUrl" class="card-img-top">
                            <div class="card-body">
                                <h3 class="cardcard-title test-success">@item.Nome</h3>
                                <span class="badge badge-light mb-2">@item.Descricao</span>
                                <p class="card-text"></p>

                                <div class="row">
                                    <div class="col pt-1">
                                        <span style="font-size:23px;">@item.Preco.ToString("c")</span>
                                    </div>
                                    <div class="col">
                                        <a href="/details/@item.Id/@false" class="btn btn-success form-control">Details</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@code {
    List<Produto> Produtos { get; set; }

    public bool OnInitializeCompleted { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        Produtos = await _service.GetProdutosByGenero((int)EGenero.Feminino);

        OnInitializeCompleted = true;
    }
}
