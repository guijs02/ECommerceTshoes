@using EcommerceWeb.Dto;

<div class="d-flex justify-content-center" style="margin-top:7rem;">

    <div class="container row align-content-center">
        @foreach (var item in Produtos)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="p-0 my-3 border">
                    <div class="card">
                        <img src="@item.ImageUrl" class="card-img-top">
                        <div class="card-body">
                            <h3 class="cardcard-title test-success">@item.Nome</h3>
                            <p class="card-text"></p>

                            <div class="row">
                                <div class="col-6 pt-1">
                                    <span style="font-size:23px;">@item.Preco.ToString("c")</span>
                                </div>
                                <div class="col-6">
                                    <a href="/details/@item.Id" class="btn btn-success form-control">Details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>

</div>
@code {
    [Parameter]
    public List<ProdutoDto> Produtos { get; set; }


}
